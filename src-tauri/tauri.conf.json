{
  "productName": "StorViz",
  "version": "1.0.0-pre.2",
  "identifier": "com.storviz",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../out"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": "Entitlements.plist"
    }
  },
  "app": {
    "windows": [
      {
        "title": "StorViz - ExpTech Studio",
        "width": 840,
        "height": 630,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["*"],
          "permissions": [
            "dialog:allow-open",
            "core:default",
            "shell:default",
            "shell:allow-open"
          ]
        }
      ]
    }
  }
}
